<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="jp.kshoji.stlviewer" android:versionCode="5"
	android:versionName="0.4-beta">
	<uses-sdk android:minSdkVersion="7" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".activity.STLViewActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="file" />
				<data android:scheme="http" />
				<data android:mimeType="*/*" />
				<data android:pathPattern=".*\\.stl" />
				<data android:pathPattern=".*\\.STL" />
				<data android:host="*" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.PreferencesActivity"
			android:label="@string/app_pref" android:theme="@style/Theme.DefaultActivity">
			<intent-filter>
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>
</manifest>